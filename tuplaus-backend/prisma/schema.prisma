generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id             String      @id @default(uuid())
  balance        Float
  activeWinnings Float       @default(0)
  rounds         GameRound[]
}

model GameRound {
  id        String   @id @default(uuid())
  player    Player   @relation(fields: [playerId], references: [id])
  playerId  String
  bet       Float
  choice    String // "small" or "large"
  drawnCard Int
  didWin    Boolean
  winnings  Float
  createdAt DateTime @default(now())
}
